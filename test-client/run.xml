<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.knowhowlab.osgi.tips.activation</groupId>
    <artifactId>run</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>KnowHowLab Tips&amp;Tricks: Run Samples</name>
    <description>KnowHowLab Tips and Tricks: Run Samples</description>
    <url>http://knowhowlab.org</url>

    <developers>
        <developer>
            <name>Dmytro Pishchukhin</name>
            <timezone>GMT+1</timezone>
        </developer>
    </developers>

    <organization>
        <name>Know-How Lab</name>
        <url>http://knowhowlab.org</url>
    </organization>

    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.ops4j</groupId>
                    <artifactId>maven-pax-plugin</artifactId>
                    <version>1.4</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <repositories>
        <repository>
            <id>com.springsource.repository.bundles.external</id>
            <url>http://repository.springsource.com/maven/bundles/external</url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>blueprint-annotations</id>
            <build>
                <defaultGoal>pax:provision</defaultGoal>
                <plugins>
                    <plugin>
                        <groupId>org.ops4j</groupId>
                        <artifactId>maven-pax-plugin</artifactId>
                        <version>1.4</version>
                        <configuration>
                            <runner>1.5.0</runner>
                            <framework>equinox</framework>
                            <provision>
                                <param>--log=debug</param>
                                <param>--workingDirectory=target/runner</param>
                                <param>--ee=J2SE-1.5</param>
                                <param>mvn:org.eclipse.osgi/org.eclipse.osgi.services/3.2.100.v20100503</param>
                                <param>mvn:org.eclipse.equinox/org.eclipse.equinox.common/3.6.0.v20100503</param>
                                <param>mvn:org.eclipse.equinox/org.eclipse.equinox.preferences/3.3.0.v20100503</param>
                                <param>mvn:org.slf4j/slf4j-api/1.6.1</param>
                                <param>mvn:org.slf4j/slf4j-jdk14/1.6.1</param>
                                <param>mvn:org.apache.aries.blueprint/org.apache.aries.blueprint/0.2-incubating</param>
                                <param>
                                    mvn:org.apache.aries.blueprint/org.apache.aries.blueprint.annotation.api/0.2-incubating
                                </param>
                                <param>mvn:javax.xml.bind/com.springsource.javax.xml.bind/2.2.0</param>
                                <param>mvn:javax.xml.stream/com.springsource.javax.xml.stream/1.0.1</param>
                                <param>mvn:javax.activation/com.springsource.javax.activation/1.1.1</param>
                                <param>mvn:org.apache.xbean/xbean-finder/3.7</param>
                                <param>mvn:asm/asm-all/3.3</param>
                                <param>mvn:org.jvnet.staxex/com.springsource.org.jvnet.staxex/1.0.0</param>
                                <param>mvn:com.sun.xml/com.springsource.com.sun.xml.bind/2.2.0</param>
                                <param>mvn:com.sun.xml/com.springsource.com.sun.xml.fastinfoset/1.2.2</param>
                                <param>mvn:org.apache.xmlcommons/com.springsource.org.apache.xmlcommons/1.3.4</param>
                                <param>
                                    mvn:org.apache.aries.blueprint/org.apache.aries.blueprint.annotation.impl/0.2-incubating
                                </param>
                                <param>mvn:org.knowhowlab.osgi.tips.activation/core/${project.version}</param>
                                <param>
                                    mvn:org.knowhowlab.osgi.tips.activation/blueprint-annotations/${project.version}
                                </param>
                                <param>
                                    mvn:org.apache.aries.blueprint/org.apache.aries.blueprint.sample-annotation/0.2-incubating
                                </param>
                            </provision>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>